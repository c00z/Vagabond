<!-- Edit User Profile -->

 <div class="container">
   <div class="row">
     <br>
     <br>
   <div class="col s6 push-s3">
   <%= form_for @user do |f| %>
  <div>
    <%= f.text_field :user_name, placeholder: "Username" %>
  </div>
  <div>
    <%= f.text_field :current_city, placeholder: "Current City" %>
  </div>
  <div>
    <%= f.text_field :email, placeholder: "Email" %>
  </div>
  <div>

    <%= f.file_field :avatar %>
  </div>
  <br>
  <a class="waves-effect waves-light btn"><%= f.submit "Save" %></a>
  <% end %>
</div>
</div>
</div>
