<!-- Signing up a new user -->

 <div class="container">
    <div class="row">
      <br>
      <br>
      <div class="col s6 offset-s3" id="signuppage">
        <h3 id="signupheader">Sign Up</h3>
      <%= form_for @user do |f| %>
        <div>
          <%= f.text_field :user_name, placeholder: " Username", id:"form"%>
        </div>
        <div>
          <%= f.text_field :current_city, placeholder: " Current City", id:"form" %>
        </div>
        <div>
          <%= f.text_field :email, placeholder: " Email", id:"form" %>
        </div>
        <div>
          <%= f.password_field :password, placeholder: " Password", id:"form" %>
        </div>
        <div>
          <%= f.file_field :avatar %>
        </div>
        <br>
        <div class="col s6 push-s4">
          <a class="waves-effect waves-light btn-large" id="signupbutton"><%= f.submit "Sign Up" %></a>
        </div>
      <% end %>
    </div>
  </div>
</div>
