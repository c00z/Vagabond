 <div class="container">
  <div class="row">
    <div class="col s6 offset-s3">
      <h3>Sign Up</h3>

      <%= form_for @user do |f| %>
        <div>
          <%= f.text_field :user_name, placeholder: "Username"%>
        </div>
        <div>
          <%= f.text_field :current_city, placeholder: "Current City" %>
        </div>
        <div>
          <%= f.text_field :email, placeholder: "Email" %>
        </div>
        <div>
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
        <a class="waves-effect waves-light btn"><%= f.submit "Sign Up" %></a>
      <% end %>
    </div>
  </div>
</div>
