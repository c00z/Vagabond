<h1><%= @location.name %></h1>
<%=  image_tag("SF.gif") %>
<%= @location.posts.each do |p| %>
<div class="row">
<%= image_tag "sloth.jpg", width: "400", height: "200" %>
<h3><%= link_to "#{p.title}", post_path(p)%></h3>
<h5>Written by <%= p.user.user_name %> on <%=p.created_at%></h5>
<p><%= p.content %></p>
</div>
<hr>
<% end %>
